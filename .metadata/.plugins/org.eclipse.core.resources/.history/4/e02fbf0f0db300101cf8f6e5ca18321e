package Questions;

public class CountingVowelsAndConsonants {

	public static void main(String[] args) {
		String text = "Automation";

		char[] arr = text.toCharArray();
		int vowels = 0;
		int consos = 0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] != ' ') {
				if (arr[i] == 'a' || arr[i] == 'e' || arr[i] == 'i' || arr[i] == 'o' || arr[i] == 'u' || arr[i] == 'A'
						|| arr[i] == 'E' || arr[i] == 'I' || arr[i] == 'O' || arr[i] == 'U') {
					vowels++;
				} else {
					consos++;
				}
			} else
				System.out.println("spaces are there");
		}
		System.out.println("Number of Vowels = " + vowels + " ,Number of Consonants = " + (consos));
	}
	// here spaces are counted as consonants , and also it is case sensitive(a/A)

}
