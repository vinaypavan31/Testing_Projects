package Questions;

public class CountingVowelsAndConsonants {

	public static void main(String[] args) {
		String text="Automation";
		
		char[] arr=text.toCharArray();
		int count=0;
		for(int i=0;i<arr.length;i++) {
			if(arr[i]!=' ') {
			if(arr[i]=='a' || arr[i]=='e' || arr[i]=='i' || arr[i]=='o' || arr[i]=='u' ||arr[i]=='A' || arr[i]=='E' || arr[i]=='I' || arr[i]=='O' || arr[i]=='U'  ) {
				count++;
			}}
		}
		System.out.println("Number of Vowels = "+count+" ,Number of Consonants = "+(text.length()-count));
	}
	//here spaces are counted as consonants , and also it is case sensitive(a/A)

}
